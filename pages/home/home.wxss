/* pages/userConsole/userConsole.wxss */

@import "../../style/common.wxss";

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 300rpx;
  background-repeat: no-repeat;
  background-color: rgb(153, 255, 230);
  background-size: 100% 300rpx;
  background-position: center;
  text-align: center;
  box-sizing: border-box;
}

.userinfo .avatar {
  margin-top: 60rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 120rpx;
  border: 6rpx solid #fff;
  box-sizing: border-box;
}

.userinfo .username {
  color: #fff;
  font-size: 28rpx;
  margin-top: 25rpx;
}

.user-feature{
  width: 100%;
  margin-top: 15rpx;
}

.app-info {
  width: 100%;
  margin-top: 20rpx;
}

.btn-getInfo {
  width: 100%;
  border-radius: 0;
  background: #fff;
  font-size: 30rpx;
  color: #555;
}

.user-link {
  clear: both;
  background: #fff; 
  color: #fff;
}

.user-link.order-item {
    width: 25%;
    color: white;
    border: none;
    padding: 0;
  }